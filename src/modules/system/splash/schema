create table 'colour-scheme' (
       'name' varchar(255) primary key,
       'r' integer,
       'g' integer,
       'b' integer);

--
-- Standard (orange-on-black) theme.
--
-- insert into 'colour-scheme' values ('background', 0,  0,  0  );
-- insert into 'colour-scheme' values ('border',     150,80, 0  );
-- insert into 'colour-scheme' values ('fill',       150,100,0  );
-- insert into 'colour-scheme' values ('text',       255,255,255);
-- insert into 'colour-scheme' values ('xterm-bg',   0,  0,  0  );
-- insert into 'colour-scheme' values ('xterm-fg',   7,  0,  0  );

--
-- Blue on black.
--
insert into 'colour-scheme' values ('splash-background', 0, 0, 0);
insert into 'colour-scheme' values ('border',     60, 60, 150);
insert into 'colour-scheme' values ('fill',       20, 20, 100);
insert into 'colour-scheme' values ('selected-text',255,255,255);
insert into 'colour-scheme' values ('text',       0,  0,  0  );
insert into 'colour-scheme' values ('tui-background', 255,255,255);
insert into 'colour-scheme' values ('xterm-bg',   8,  0,  0  );
insert into 'colour-scheme' values ('xterm-fg',   0,  0,  0  );
