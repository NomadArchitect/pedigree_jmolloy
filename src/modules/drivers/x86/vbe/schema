create table 'displays' (
       'id' integer primary key,
       'pointer' integer,
       'mode_id' integer,
       'available_modes_table' varchar(64));

create table 'display-modes/0' (
       'id' integer primary key,
       'width' integer,
       'height' integer,
       'depth' integer,
       'refresh' integer);

create table 'display-modes/1' (
       'id' integer primary key,
       'width' integer,
       'height' integer,
       'depth' integer,
       'refresh' integer);

create table 'display-modes/2' (
       'id' integer primary key,
       'width' integer,
       'height' integer,
       'depth' integer,
       'refresh' integer);

create table 'display-modes/3' (
       'id' integer primary key,
       'width' integer,
       'height' integer,
       'depth' integer,
       'refresh' integer);

create trigger 'display-modes/0-selected' after update of 'mode_id' on 'displays'
when NEW.mode_id <> OLD.mode_id
begin
        update trigger_dumpzone set rubbish=PEDIGREE_CALLBACK('vbeModeChangedCallback');
end;
